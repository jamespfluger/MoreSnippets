<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>amethod</Title>
            <Shortcut>amethod</Shortcut>
            <Description>Code snippet for an async method</Description>
            <Author>James Pfluger</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>accessModifier</ID>
                    <ToolTip>Acess modifier of the method</ToolTip>
                    <Default>public</Default>
                </Literal>
                <Literal>
                    <ID>returnType</ID>
                    <ToolTip>Return type of the method</ToolTip>
                    <Default>int</Default>
                </Literal>
                <Literal>
                    <ID>methodName</ID>
                    <ToolTip>Name of the method</ToolTip>
                    <Default>MyMethodAsync</Default>
                </Literal>
            </Declarations>
            <Code Language="csharp">
                <![CDATA[$accessModifier$ async Task<$returnType$> $methodName$()
                {
                    $end$
                }]]>
            </Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>
